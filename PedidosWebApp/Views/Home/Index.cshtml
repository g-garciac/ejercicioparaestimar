@model PedidosWebApp.Models.PedidoVm
@{
    PedidosWebApp.Models.ProductoPedidoVm ProductoPedidoVmNull = null;  //Usado para poder obtener los atributos de un ProductoPedidoVM
}

<h1>Pedidos</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Buscar">
            <div class="form-group col-md-3">
                <label asp-for="CodigoABuscar" class="control-label"></label>
                <input asp-for="CodigoABuscar" class="form-control" />
                <span asp-validation-for="CodigoABuscar" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="CantidadAgregar" class="control-label"></label>
                <input asp-for="CantidadAgregar" class="form-control" />
                <span asp-validation-for="CantidadAgregar" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <input type="submit" value="Buscar y agregar" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger  col-md-3"></div>
        </form>
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => ProductoPedidoVmNull.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(m => ProductoPedidoVmNull.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(m => ProductoPedidoVmNull.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(m => ProductoPedidoVmNull.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(m => ProductoPedidoVmNull.Importe)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Importe)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Total): @Model.Total.ToString("C")
    </div>
</div>